<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	

<mapper namespace="com.hadoop.dao.TicketIDao">
	
	<resultMap type="com.hadoop.po.Ticket" id="ticketResult">
		<id column="ticket_id" property="ticketID"/>
		<result column="ticket_name" property="ticketName"/>
		<result column="status" property="status"/>
	</resultMap>
	
	
	<!-- 根据条件查询车票  -->
	<select id="selectTicketByParam" parameterType="map" resultMap="ticketResult">
		select
			<include refid="select_fileds"></include>
		from van_ticket t
		<where>
			${sqlwhere}
		</where>
		order by t.ticket_id, t.ticket_status
	</select>
	
	
	
	<sql id="select_fileds">
		t.ticket_id, 
        t.ticket_name, 
        t.ticket_status
	</sql>
	
</mapper>